@model IEnumerable<crewlinkship.Models.TblCrewList>
@{
    ViewData["Title"] = "vwCrewlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="app-content content fixed-navbar-inner">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="col-xl-6 col-lg-12">
                <h4 class="content-header-title m-b-5 m-t-5">Crewlist</h4>
            </div>
            <div class="col-xl-6 col-lg-12">
                <div class="form-inline float-right m-b-10">
                    <select class="form-control form-small">
                        <option>Atlantic Crewlist</option>
                        <option>FPD01 Crewlist</option>
                        <option>IMO</option>
                        <option>OCIMF</option>
                        <option>OLP Crew list</option>
                    </select>
                    <span class="p-l-10 p-r-10">|</span>

                    <button class="btn btn-dark form-small p-t-3 p-b-3 m-r-5 " type="button" data-toggle="tooltip"
                            data-trigger="hover" data-placement="top" data-title="Print">
                        <i class="fas fa-print"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="content-body">
        <div class="row match-height" id="switch">
            <div class="col-lg-12 col-md-12 col-12">
                <div class="card m-b-0">
                    <div class="card-content">
                        <div class="row">
                            <div class="col-xl-8 col-lg-12">
                                <div class="total-crew p-l-10 p-b-10 p-t-10 p-r-10">
                                    <span>Total crew on board (2)</span> <i class="fa fa-square red m-l-10"></i> <span><a class="red">Relief over due crew (2)</a></span> <i class="fa fa-square green m-l-10"></i> <span><a class="green">Extra crew onboard (2)</a></span> <i class="fa fa-square m-l-10"></i> <span><a class="black">Extended Contract (4)</a></span> <i class="fa fa-square m-l-10"></i> <span><a class="black">Reduced Contract (4)</a></span>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-12">
                                <div class="float-right total-crew p-l-10 p-b-10 p-t-10 p-r-10">
                                    <i class="fas fa-history p-r-5"></i> <a href="#" class="black">Voyage History</a> <span class="p-l-10 p-r-10"> | </span> <i class="fas fa-ship p-r-5"></i> <a class="black">Vessel Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id='myModal' class='modal'>
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div id='myModalContent'></div>
                            </div>
                        </div>
                    </div>
                    <form>
                        <div id="goal-list-scroll" class="table-responsive position-relative">
                            <table class="table table-hover table-bordered mb-0 crew-table table-striped grid" id="CustomerGrid">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Name</th>
                                        <th>Employee No</th>
                                        <th>Nationality</th>
                                        <th>Sign On Date</th>
                                        <th>Due Date</th>
                                        <th>Reliever - Rank : Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td scope="row"><span>@item.Rank.Code</span></td>
                                            <td scope="row">
                                                <a href="#"><i class="fas fa-ellipsis-v"></i></a>
                                                <a class="details" style="color: #0068F7" href="javascript:;">@(item.Crew!=null? item.Crew.FirstName:"") &nbsp;@(item.Crew!=null? item.Crew.MiddleName : "")&nbsp;@(item.Crew!=null? item.Crew.LastName : "")</a>
                                            </td>
                                            <td>@(item.Crew!=null? item.Crew.EmpNumber : "")</td>
                                            <td>@(item.Crew!=null? item.Crew.Country.Nationality : "")</td>
                                            <td>@item.SignOnDate?.ToString("dd/MMM/yyyy")</td>
                                            <td class="red">@item.DueDate?.ToString("dd/MMM/yyyy")</td>
                                            <td scope="row">
                                                @(item.ReliverRank!=null? item.ReliverRank.Code :""):<a class="details" style="color: #0068F7" href="javascript:;">
                                                    @(item.Reliever != null? item.Reliever.FirstName:"") &nbsp;@(item.Reliever != null? item.Reliever.MiddleName : "")&nbsp;@(item.Reliever != null? item.Reliever.LastName : "")
                                                </a>
                                                <a href="#"><i class="fas fa-ellipsis-v"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div id="partialModal" class="modal" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-xl" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header  navbar-dark">
                                            <h5 class="modal-title">
                                                <img class="brand-logo" alt="stack admin logo" src="app-assets/images/logo/Crewlink-logo-light.png">
                                            </h5>
                                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                            <script type="text/javascript">
                                    $(function () {
                                        $("#CustomerGrid .details").click(function () {
                                            var customerId = $(this).closest("tr").find("td").eq(0).html();
                                            $.ajax({
                                                type: "POST",
                                                url: "/Home/Details",
                                                data: '{customerId: "' + customerId + '" }',
                                                contentType: "application/json; charset=utf-8",
                                                dataType: "html",
                                                success: function (response) {
                                                    $("#partialModal").find(".modal-body").html(response);
                                                    $("#partialModal").modal('show');
                                                    $('#partialModal').on('hidden.bs.modal', function () {
                                                        location.reload();
                                                    })
                                                },
                                                failure: function (response) {
                                                    alert(response.responseText);
                                                },
                                                error: function (response) {
                                                    alert(response.responseText);
                                                }
                                            });
                                        });
                                    });
                            </script>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


