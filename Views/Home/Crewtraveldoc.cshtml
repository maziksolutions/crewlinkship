<div class="app-content content fixed-navbar-inner-crew">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="col-xl-6 col-lg-12">
                <h4 class="content-header-title m-b-10 m-t-5">Travel Document Details</h4>
            </div>
            <div class="col-xl-6 col-lg-12 nopl">
            </div>
        </div>
        <div class="content-body">
            <div class="row match-height" id="switch">
                <div class="col-lg-12 col-md-12 col-12">
                    <section id="descriptioin" class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-xl-6 col-lg-12">
                                    <h4 class="card-title p-t-5 proper-case">Passport</h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div id="goal-list-scroll" class="table-responsive position-relative">
                                <table class="table table-hover table-bordered mb-0 crew-table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Country</th>
                                            <th>PassportNumber</th>
                                            <th>Place</th>
                                            <th>Date of Issue</th>
                                            <th>Date of Expiry</th>
                                            <th>Minimum Blank Pages</th>
                                            <th>ECNR</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TblPassport ppt in ViewBag.passport)
                                        {
                                            <tr>
                                                <td>@ppt.Country?.CountryName></td>
                                                <td>@ppt.PassportNumber</td>
                                                <td>@ppt.Place</td>
                                                <td>@(ppt.Doi == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", ppt.Doi))</td>
                                                <td>@(ppt.Doe == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", ppt.Doe))</td>
                                                <td>@ppt.BlankPages</td>
                                                <td>@ppt.Ecnr</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                    <section id="descriptioin" class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-xl-6 col-lg-12">
                                    <h4 class="card-title p-t-5 proper-case">Visa</h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div id="goal-list-scroll" class="table-responsive position-relative">
                                <table class="table table-hover table-bordered mb-0 crew-table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Country</th>
                                            <th>Visa Type</th>
                                            <th>Visa Number</th>
                                            <th>Place</th>
                                            <th>Date of Issue</th>
                                            <th>Date of Expiry</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TblVisa visa in ViewBag.visa)
                                        {
                                            <tr>
                                                <td>@visa.Country?.CountryName</td>
                                                <td>@visa.VisaSubType</td>
                                                <td>@visa.VisaNumber</td>
                                                <td>@visa.Place</td>
                                                <td>@(visa.Doi == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", visa.Doi))</td>
                                                <td>@(visa.Doe == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", visa.Doe))</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                    <section id="descriptioin" class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-xl-6 col-lg-12">
                                    <h4 class="card-title p-t-5 proper-case">Seaman Book (C.D.C)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div id="goal-list-scroll" class="table-responsive position-relative">
                                <table class="table table-hover table-bordered mb-0 crew-table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Country</th>
                                            <th>CDC Number</th>
                                            <th>Place</th>
                                            <th>Date of Issue</th>
                                            <th>Date of Expiry</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TblCdc cdc in ViewBag.cdc)
                                        {
                                            <tr>
                                                <td>@cdc.Country?.CountryName</td>
                                                <td>@cdc.Cdcnumber</td>
                                                <td>@cdc.Place</td>
                                                <td>@(cdc.Doi == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", cdc.Doi))</td>
                                                <td>@(cdc.Doe == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", cdc.Doe))</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                    <section id="descriptioin" class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-xl-6 col-lg-12">
                                    <h4 class="card-title p-t-5 proper-case">Yellow Fever Vaccination</h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered mb-0 crew-table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Reference</th>
                                            <th>Place</th>
                                            <th>Doctor</th>
                                            <th>Vaccination Batch</th>
                                            <th>Vaccination Date</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (TblYellowfever yf in ViewBag.yf)
                                        {
                                            <tr>
                                                <td>@yf.Reference</td>
                                                <td>@yf.Place</td>
                                                <td>@yf.VendorRegister.VendorName</td>
                                                <td>@yf.VaccineBatch</td>
                                                <td>@(yf.VaccineDate == null ? "NA" : String.Format("{0:dd-MMM-yyyy}", yf.VaccineDate))</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
